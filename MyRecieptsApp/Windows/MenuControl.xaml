<UserControl x:Class="MyRecieptsApp.Windows.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyRecieptsApp.Windows"
             mc:Ignorable="d" 
             Height="Auto" Width="150"
             d:DesignHeight="650" d:DesignWidth="150">
    <Grid Background="#FFFED7C1">
        <StackPanel HorizontalAlignment="Center">
            <Image Source="/Images/logo.jpeg" Width="153"/>
            <Button Cursor="Hand" Content="Блюда" Width="120" Height="35" FontFamily="Bahnschrift" FontSize="15" Margin="0,15,0,0" Background="#FFD6CA47" BorderBrush="Black" BorderThickness="1" Click="DishesPageButton_Click"/>
            <Button Cursor="Hand" Content="Ингридиенты" Width="120" Height="35" FontFamily="Bahnschrift" FontSize="15" Margin="0,15,0,0" Background="#FFD6CA47" BorderBrush="Black" BorderThickness="1" Click="IngredientsPageButton_Click"/>
        </StackPanel>
        <Button Cursor="Hand" Content="Выход" Width="120" Height="35" VerticalAlignment="Bottom" Margin="0,0,0,20" FontFamily="Bahnschrift" FontSize="15" Background="#FFD6CA47" BorderBrush="Black" BorderThickness="1" Click="ExitButton_Click"/>
    </Grid>
</UserControl>
